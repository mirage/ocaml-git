(executable
 (name test)
 (flags
  (:standard -thread))
 (libraries result rresult fpath decompress.de decompress.zl optint fmt
   bigarray-compat bigstringaf base64 bos checkseum.c digestif.c mmap unix
   threads carton alcotest))

(rule
 (alias runtest)
 (package carton)
 (deps
  (:test test.exe)
  bomb.pack)
 (action
  (run %{test} --color=always)))
